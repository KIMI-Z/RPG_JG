package jg.rpg.dao.db;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.util.List;

import jg.rpg.exceptions.InitException;

public class DBHelper {

	public static Connection getConnection(String driver , String url , String user ,String pwd) throws InitException{
		Connection conn = null;
		try {
			Class.forName(driver);
			conn = DriverManager.getConnection(url, user, pwd);
		} catch (ClassNotFoundException | SQLException e) {
			throw new InitException("connect db error : "+driver);
		}
		return conn;
	}
	
  public static <T> List<T> GetAll(Connection conn , String sql){
	return null;
	
	  
  }
}
